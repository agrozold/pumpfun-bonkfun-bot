# =============================================================================
# SOLANA PRIVATE KEY (base58 encoded)
# =============================================================================
SOLANA_PRIVATE_KEY=your_private_key_here

# =============================================================================
# RPC ENDPOINTS (get your own API keys)
# =============================================================================
SOLANA_NODE_RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
SOLANA_NODE_WSS_ENDPOINT=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# QuickNode (recommended for WebSocket)
QUICKNODE_RPC_ENDPOINT=https://your-endpoint.quiknode.pro/YOUR_KEY/
QUICKNODE_WSS_ENDPOINT=wss://your-endpoint.quiknode.pro/YOUR_KEY/

# Optional fallbacks
HELIUS_RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
CHAINSTACK_RPC_ENDPOINT=https://solana-mainnet.core.chainstack.com/YOUR_KEY
ALCHEMY_RPC_ENDPOINT=https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
DRPC_RPC_ENDPOINT=https://lb.drpc.org/ogrpc?network=solana&dkey=YOUR_KEY
DRPC_WSS_ENDPOINT=wss://lb.drpc.org/ogws?network=solana&dkey=YOUR_KEY

# =============================================================================
# JITO (for MEV protection)
# =============================================================================
JITO_ENABLED=true
JITO_TIP_LAMPORTS=200000
JITO_BLOCK_ENGINE_URL=https://frankfurt.mainnet.block-engine.jito.wtf

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CREATOR_CACHE_TTL=3600
CREATOR_RISK_THRESHOLD=50

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
FAILOVER_THRESHOLD=3
